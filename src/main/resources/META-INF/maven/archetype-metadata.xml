<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="getting-started"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <requiredProperties>

    <requiredProperty key="package">
        <defaultValue>${groupId}.${artifactId}</defaultValue>
    </requiredProperty>

  </requiredProperties>

  <fileSets>

    <!-- Root files -->
    <fileSet filtered="true" packaged="false" encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>*.gitignore</include>
        <include>*.properties</include>
        <include>*.yaml</include>
        <include>*.yml</include>
        <include>docker-compose.yml</include>
        <include>Dockerfile</include>
        <include>README.md</include>
      </includes>
    </fileSet>

    <!-- Source -->
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>

    <!-- Source resources -->
    <fileSet filtered="false" packaged="false" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*.xsd</include>
        <include>**/*.yaml</include>
      </includes>
    </fileSet>

    <!-- Test -->
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>

    <!-- Test resources: Generated -->
    <fileSet filtered="true" packaged="false" encoding="UTF-8">
      <directory>src/test/resources</directory>
      <includes>
        <include>**/*.properties</include>
      </includes>
    </fileSet>

    <!-- Test resources: Copied -->
    <fileSet filtered="false" packaged="false" encoding="UTF-8">
      <directory>src/test/resources</directory>
      <includes>
        <include>**/*.xsd</include>
        <include>**/*.yaml</include>
      </includes>
    </fileSet>

  </fileSets>

</archetype-descriptor>
